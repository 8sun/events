@font-face
    font-family Lobster
    src url(../fonts/lobster.ttf)

@font-face
    font-family Gotham
    src url(../fonts/Gotham-Pro-Light-Regular.ttf)

.logo
    font-family Lobster
    font-size 49px
    float left
    justify-content space-around
    flex-direction column-reverse
    display flex
    height 70px

.arrow-top
    opacity 0
    margin-top 20px

.arrow-top-show
    background url(../img/arrow.png) no-repeat
    background-size 92px
    height 95px
    opacity 1
    margin-top 0px
    transition 1s

.ava
    width 26px
    border-radius 50%
    border 2px solid #2b2d2b
    margin-right 10px
    float left
    vertical-align bottom

ul
    padding-left 0
    li
        list-style-type none
        margin 3px 0

.btn-toolbar
    float right

.homepage
    blockquote
        font-size 14px

.btn-success
    background-color #f26b00
    border-color #c55903
    &:hover
        background-color #f26b00

.colorize
    background #337ab7
    transition 1s

.content
    div
        // font-family Gotham

.bg-success
    padding 15px

.userline
    height 40px
    background #FDF6E3
    justify-content space-around
    flex-direction row
    align-items center
    display flex
    font-size 16px

.pic
    width 37px
    border-radius 50%
    border 2px solid #2b2d2b
    margin-right 10px

body
    background-color #FBFEFA

header
    height 70px
    background #f26b00
    color #2b2d2b
    a
        color #2b2d2b

footer
    height 70px
    background #2b2d2b
    color #2b2d2b
    margin-top 20px

.menu
    height 70px
    float right
    display flex
    justify-content space-around
    flex-direction row
    align-items center
    a
        padding 0 10px
        color #2b2d2b

section#page
    height 200px
    background #2b2d2b
    color #fbfefa
    text-align center
    display flex
    justify-content space-around
    flex-direction row
    align-items center

.fileInput
    border-bottom 4px solid #d3d3d3
    border-right 4px solid #d3d3d3
    border-top 1px solid #000
    border-left 1px solid #000
    padding 10px
    margin 15px
    cursor pointer

.imgPreview
    width 300px
    height auto
    img
        width 200px
        height auto

.previewText
    width 100%
    margin-top 20px

.submitButton
    padding 12px
    margin-left 10px
    background #fff
    border 4px solid #d3d3d3
    border-radius 15px
    font-weight 700
    font-size 10pt
    cursor pointer
    &:hover
        background #efefef

.centerText
    text-align center
    width 500px

label.uploadbutton
    display inline-block
    overflow hidden

label.uploadbutton input
    display none

label.uploadbutton span
    display block
    margin 0 0 .28571429rem
    color rgba(0,0,0,.87)
    font-weight 700
    text-transform: none
    font-size .92857143em

.comment .text
    white-space pre-line

.slider
    position relative
    overflow hidden
    width 500px
    height 500px

.crop
    position absolute
    left 0px
    width 500px
    height 500px
    transition 1s

.name
    position absolute
    left 0px
    width 500px
    height 500px
    transition 1s

.crop-hide
    transition 1s
    left -500px

.name-hide
    transition 1s
    left 500px

.avatars
    margin-bottom 10px
    width 500px

.avatars
  img
    margin-right 20px
    vertical-align top
